{
    "name":         "primjeri/datagrid-bundle",
    "description":  "This bundle provides easy creating of jqGrid datagrids",
    "keywords":     ["datagrid", "jqGrid", "jQuery", "Symfony"],
    "type":         "symfony-bundle",
    "license":      "MIT",
    "authors":      [
        {
            "name":     "Nikolay Georgiev",
            "email": "symfonist@gmail.com"
        },
        {
            "name": "primjeri",
            "email": "info@primjeri.com",
            "role": "Contributor"
        }
    ],
    "repositories": [
        { "type": "vcs", "url": "https://github.com/primjeri/datagrid-bundle.git" }
    ],
    "extra": {
        "branch-alias": {
            "dev-master": "1.1.*-dev"
        }
    },
    "minimum-stability": "dev",
    "require":      {
        "php": ">=5.3.3",
        "symfony/framework-bundle": "~2.3",
        "symfony/options-resolver": "2.*",
        "symfony/twig-bundle": "2.*"
    },
    "require-dev": {
        "primjeri/component-bundle": "*",
   		"phpunit/phpunit": "3.7.*@dev",
   		"symfony/doctrine-bridge": "~2.3",
        "doctrine/orm": "2.*",
        "doctrine/doctrine-bundle": "1.*"
    },
    "autoload":     {
        "psr-0": { "Primjeri\\DataGridBundle": "" }
    },
    "target-dir": "Primjeri/DataGridBundle"
}
