<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="primjeri_data_grid.data" pattern="/_primjeri-datagrid/data/{name}.{_format}">
        <default key="_controller">primjeri_data_grid.controller.datagrid:dataAction</default>
        <default key="_format">json</default>
        <requirement key="_method">POST</requirement>
    </route>

    <route id="primjeri_data_grid.row_action" pattern="/_primjeri-datagrid/row-action/{name}.{_format}">
        <default key="_controller">primjeri_data_grid.controller.datagrid:rowAction</default>
        <default key="_format">json</default>
        <requirement key="_method">POST</requirement>
    </route>

    <route id="primjeri_data_grid.mass_action" pattern="/_primjeri-datagrid/mass-action/{name}.{_format}">
        <default key="_controller">primjeri_data_grid.controller.datagrid:massAction</default>
        <default key="_format">json</default>
        <requirement key="_method">POST</requirement>
    </route>

    <route id="primjeri_data_grid.sortable_action" pattern="/_primjeri-datagrid/sortable/{name}.{_format}">
        <default key="_controller">primjeri_data_grid.controller.datagrid:sortableAction</default>
        <default key="_format">json</default>
        <requirement key="_method">POST</requirement>
    </route>
    
</routes>
